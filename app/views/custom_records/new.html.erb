<h1>New Custom Record</h1>
<%= form_with(model: [@custom_object, @custom_record], local: true) do |form| %>
  <% if @custom_record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@custom_record.errors.count, "error") %> prohibited this custom_record from being saved:</h2>
      <ul>
        <% @custom_record.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :data %>
    <%= form.text_area :data %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back to Custom Object', @custom_object %>