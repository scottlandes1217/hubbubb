<h1><%= @custom_object.name %></h1>
<p><%= @custom_object.description %></p>

<h2>Fields</h2>
<%= link_to 'New Field', new_custom_object_custom_field_path(@custom_object) %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Field Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @custom_object.custom_fields.each do |custom_field| %>
      <tr>
        <td><%= custom_field.name %></td>
        <td><%= custom_field.field_type %></td>
        <td><%= link_to 'Show', [@custom_object, custom_field] %></td>
        <td><%= link_to 'Edit', edit_custom_object_custom_field_path(@custom_object, custom_field) %></td>
        <td><%= link_to 'Destroy', [@custom_object, custom_field], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Records</h2>
<%= link_to 'New Record', new_custom_object_custom_record_path(@custom_object) %>

<table>
  <thead>
    <tr>
      <th>Data</th>
    </tr>
  </thead>
  <tbody>
    <% @custom_object.custom_records.each do |custom_record| %>
      <tr>
        <td><%= custom_record.data %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_custom_object_path(@custom_object) %> |
<%= link_to 'Back', custom_objects_path %>
