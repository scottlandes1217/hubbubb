<h1>Custom Fields</h1>
<%= link_to 'New Custom Field', new_custom_object_custom_field_path(@custom_object) %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Field Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @custom_fields.each do |custom_field| %>
      <tr>
        <td><%= custom_field.name %></td>
        <td><%= custom_field.field_type %></td>
        <td><%= link_to 'Show', [@custom_object, custom_field] %></td>
        <td><%= link_to 'Edit', edit_custom_object_custom_field_path(@custom_object, custom_field) %></td>
        <td><%= link_to 'Destroy', [@custom_object, custom_field], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Custom Object', @custom_object %>
